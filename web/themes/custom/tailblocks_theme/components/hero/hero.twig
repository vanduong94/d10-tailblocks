<section class="text-gray-600 body-font">
    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
        <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
            <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">{{title}}
            </h1>
            {% if body %}
                <div class="mb-8 leading-relaxed">{{body}}</div>
            {% endif %}
            <div class="flex justify-center">
                {% if btn_one_title %}
                    <a class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" href="{{btn_one_url_title}}">{{btn_one_title}}</a>
                {% endif %}
                {% if btn_two_title %}
                    <a class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg" href={{btn_two_url_title}}>{{btn_two_title}}</a>
                {% endif %}
            </div>
        </div>
        {% if image %}
            <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
                {{image}}
            </div>
        {% endif %}
    </div>
</section>